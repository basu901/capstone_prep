<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/stopwatch_text" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:id="@+id/stopwatch_play"
        android:contentDescription="@string/play_cd"
        android:src="@drawable/ic_play_circle_filled_black_48dp"
        android:layout_below="@id/stopwatch_text"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/stopwatch_reset"
        android:contentDescription="@string/reset"
        android:src="@drawable/ic_autorenew_white_36dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>

